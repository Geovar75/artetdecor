{% extends 'base.html.twig' %}

{% block title %}Art et Décor | Produits{% endblock %}

{% block content %}
    <h1 style="margin-top:150px;">Nos Produits</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
            <div class="col-md-9">
                <div class="grid">
                    <div class="row">
                        {% for product in products %}
                            <div class="product-item text-center" style="width:100%;">
                                <a href="{{ path('product', { 'slug' : product.slug }) }}">
                                    <img src="assets/pictures/{{ product.image }}" alt="{{ product.name }}" class="img-fluid" style="max-height:200px; max-width:200px;"/>
                                    <h4>{{ product.name }}</h4>
                                    <h4>{{ product.description }}</h4>
                                    <h5>{{ (product.price / 100)|number_format(2, ',', '') }} € HT</h5>
                                </a>
                            </div>
                        {% endfor %}
                        <div class="paginator">{{ knp_pagination_render(products) }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}