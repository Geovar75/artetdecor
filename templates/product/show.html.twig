{% extends 'base.html.twig' %}

{% block title %}Art et Décor | {{ product.name }}{% endblock %}

{% block content %}
    <div class="row" style="margin-top:200px; display:flex; flex-direction:column; justify-content:center;">
        <div class="col-md-5">
            <img src="assets/pictures/{{ product.image }}" alt="{{ product.name }}" class="img-fluid" style="max-height:200px; max-width:200px;"/>
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitles }}</p>
            <span>{{ (product.price / 100)|number_format(2, ',', '.') }} € HT</span>
            <hr>
            <p>{{ product.description }}</p>
            <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
        <br>
    </div>
{% endblock %}