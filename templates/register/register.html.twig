{% extends 'base.html.twig' %}

{% block title %}Art et Décor | Inscription{% endblock %}

{% block content %}
    <h1 style='margin-top:150px;'>Inscription</h1>
  {% if notification %}
    <div class="alert alert-info">{{ notification }}</div>
    <hr>
  {% endif %}
      {{ form_start(form) }}
            {{ form_row(form.firstname, {'label' : 'Entrez votre prénom', 'attr' : {'placeholder' : 'Prénom'}}) }}
            {{ form_row(form.lastname, {'label' : 'Entrez votre nom', 'attr' : {'placeholder' : 'Nom de famille'}}) }}
            {{ form_row(form.email, {'label' : 'Entrez votre email', 'attr' : {'placeholder' : 'Email'}}) }}
            {{ form_row(form.password, {'label' : 'Entrez votre mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}
            {{ form_row(form.confirm_password, {'label' : 'Confirmez votre mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}
            <button type="submit" class="btn btn-success">Inscription</button>
        {{ form_end(form) }}
{% endblock %}
